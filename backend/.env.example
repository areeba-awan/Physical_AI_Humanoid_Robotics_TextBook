# Physical AI Learning Platform - Backend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
ENVIRONMENT=development
PORT=8000
HOST=0.0.0.0
DEBUG=false

# =============================================================================
# DATABASE - Neon Serverless Postgres
# =============================================================================
# Get your connection string from: https://neon.tech/
# For async (FastAPI): postgresql+asyncpg://...
DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx.us-east-2.aws.neon.tech/physical_ai?sslmode=require

# =============================================================================
# VECTOR DATABASE - Qdrant Cloud Free Tier
# =============================================================================
# Get your cluster from: https://cloud.qdrant.io/
QDRANT_URL=https://xxx-xxx.us-east-1-0.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION=physicalai_textbook

# =============================================================================
# OPENAI API
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_EMBEDDING_DIMENSIONS=3072

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Better Auth (if using)
BETTER_AUTH_SECRET=your-super-secret-key-min-32-chars
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","https://your-frontend.vercel.app"]

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
RAG_SCORE_THRESHOLD=0.35
RAG_MAX_RESULTS=10
RAG_MAX_CONTEXT_TOKENS=4000

# =============================================================================
# CHAT CONFIGURATION
# =============================================================================
CHAT_SESSION_TIMEOUT_HOURS=24
CHAT_MAX_HISTORY_MESSAGES=10

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
